<!DOCTYPE html>
<html>
  <head>
    <title>TravelOnRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <header>
  <div class = "navi">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
 <ul class="navbar-nav">
    <li class="nav-item active">
      <a class="nav-link"><%= link_to "Signup", new_user_path, class: 'link-to-text-color' %></a>
    </li>
    <% if !@current_user %>
    <li class="nav-item active">
      <a class="nav-link"><%= link_to "Login", login_path, class: 'link-to-text-color' %></a>
    </li>
    <% end %>
     <% if @current_user %>
    <li class="nav-item active">
      <a class="nav-link"><%= link_to "Logout", logout_path, class: 'link-to-text-color' %></a>
    </li>
    <% end %>
  </ul>
</nav>
</div>

 </header>

  <body>
    <%= yield %>
  </body>

</html>
